@model SemanticWeb.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mx-5 my-5">
    <div class="col-5">
        <h1 style="font-family: 'Pangolin', cursive;">Chỉnh sửa bài đăng</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label">Mô tả</label>
                        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AreaId" class="control-label">Khu vực:</label>
                        <select asp-for="AreaId" class="form-control">
                            <option value=1>Hải Châu</option>
                            <option value=2>Thânh Khê</option>
                            <option value=3>Sơn Trà</option>
                            <option value=4>Liên Chiểu</option>
                            <option value=5>Cẩm Lệ</option>
                            <option value=6>Hòa Vang</option>
                            <option value=7>Ngũ Hành Sơn</option>
                        </select>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="ImageURL" class="control-label">Link ảnh</label>
                        <input asp-for="ImageURL" class="" type="file" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>*@
                    <div class="form-group">

                        <input asp-for="ImageURL" value=@Model.ImageURL type="hidden" />

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="ViewHistory">Quay lại</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
