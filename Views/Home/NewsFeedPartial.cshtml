@using Microsoft.AspNetCore.Identity
@inject UserManager<SemanticWeb.Data.CustomUser> UserManager
@model IEnumerable<SemanticWeb.Models.Post>


<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="card border-info mb-3" data-toggle="modal" data-target="#myModal" data-id="@item.Id"
              data-title="@item.Title" data-description="@item.Content" data-image="@item.ImageURL" data-date="@item.DatePosted">
            <img class="card-img-top card-thumbnail" src="~/images/@item.ImageURL" alt="Card image cap">
            <div class="card-body" style="height:80px;">
                <h5 class="card-title d-flex align-items-center" style="height:50px;">@item.Title</h5>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a class="btn btn-outline-info float-right" asp-action="Details" asp-route-id="@item.Id" asp-controller="Posts">Xem chi tiết</a>
            </div>
        </div>
    }
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-center" id="myModalLabel" style="font-family: 'Pangolin', cursive;"></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <img class="card-img-top" src="" alt="Card image cap" id="image-thumbnail">
                    <div class="card-body">
                        <p class="card-text" id="content"></p>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <a class="btn btn-outline-info" id="detail-btn" href="">Xem chi tiết</a>
                    <p class="font-weight-bold">Ngày đăng: <span class="font-weight-light" id="date"></span> </p>
                </div>
            </div>
        </div>
    </div>
</div>

